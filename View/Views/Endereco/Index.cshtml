
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <h1>Lista Contas a Receber</h1>
    </div>
    <a href="/endereco/cadastro">Novo Cadastro</a>
    <form action="/endereco/index" method="get">

        <label for="campo-pesquisa">Busca</label>
        <input type="text" id="campo-pesquisa" name="pesquisa" />

    </form>


    <div>
        <table class="tabela">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>UF</th>
                    <th>Cidade</th>
                    <th>Cep</th>
                    <th>Complemento</th>
                </tr>
            </thead>


            <tbody>
                @for (int i = 0; i < ViewBag.Enderecos.Count; i++)
                {
                    <tr>
                        <td>@ViewBag.Enderecos[i].Id</td>
                        <td>@ViewBag.Enderecos[i].Uf</td>
                        <td>@ViewBag.Enderecos[i].Cidade</td>
                        <td>@ViewBag.Enderecos[i].Cep</td>
                        <td>@ViewBag.Enderecos[i].Complemento</td>

                        <td>
                            <a href="/endereco/apagar?id=@ViewBag.Enderecos[i].Id">Apagar</a>
                        </td>
                        <td>
                            <a href="/endereco/editar?id=@ViewBag.Enderecos[i].Id">Editar</a>
                        </td>
                    </tr>

                    
                }
            </tbody>
        </table>

    </div>
</body>
</html>
